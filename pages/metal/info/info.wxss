/* pages/metal/info/info.wxss */
#info {
  width: 100%;
  height: 100%;
  padding: 20px;
  box-sizing: border-box;
}
.show-info,
.people-info {
  width: 100%;
  height: auto;
  padding: 15px 0;
  border-bottom: 1px solid #3D3D3D;
}
.show-info .title {
  font-size: 30px;
}
.show-info .show-image {
  width: 140px;
  height: 186px;
  margin: 0 auto 16px;
}
.show-info .show-image image {
  width: 100%;
  height: 100%;
}
.tac {
  text-align: center;
}
.show-title {
  color: #fff;
  font-size: 14px;
  margin-bottom: 10px;
}
.show-little {
  font-size: 12px;
  line-height: 20px;
}
.people-title text {
  font-size: 15px;
  color: #CCCCCC;
  text-align: left;
}
.people-title view {
  width: 80px;
  height: 20px;
  line-height: 20px;
  background-color: #4C6B8F;
  color: #FFFFFF;
  text-align: center;
  float: right;
  font-size: 12px;
}
.peoele-avatar {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  margin-top: 8px;
}
.peoele-avatar .avatar {
  width: 30px;
  height: 30px;
  background-color: #4C6B8F;
  border: 1px solid #CCCCCC;
  float: left;
  margin: 5px 10px 10px;
  border-radius: 50%;
}
.more {
  text-align: right;
  font-size: 12px;
  color: #636363;
  margin-top: 10px;
  /* margin:  */
}
.info-image image {
  width: 100%;
  height: 100%;
}
.message-info {
  width: 100%;
  height: auto;
  padding: 15px 0;
}
.message-title {
  font-size:15px;
  color:#CCCCCC;
  text-align:left;
  margin-bottom: 10px;
}
.message-item {
  position: relative;
}
.message-avatar {
  width: 40px;
  position: absolute;
  left: 0;
  top: 0;
}
.message-avatar .avatar {
  width: 30px;
  height: 30px;
  background-color: #4C6B8F;
  border: 1px solid #CCCCCC;
  border-radius: 50%;
}
.message-text {
  padding: 5px 50px 5px 40px;
}
.message-time {
  width: 50px;
  font-size: 12px;
  position: absolute;
  right: 0;
  top: 0;
}
.text-info {
  color: #fff;
  font-size: 13px;
  margin-bottom: 5px;
}
.text-user {
  font-size: 13px;
  color: #7C7C7C;
}
.btn-tac {
  width: 40%;
  margin: 10px 5%;
  text-align: center;
}
.clearfix::after {
  content: ".";
  clear: both;
  display: block;
  overflow: hidden;
  font-size: 0;
  height: 0;
}
.clearfix {
  zoom: 1;
}