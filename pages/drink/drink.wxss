/* pages/drink/drink.wxss */
#panel{
  height: 100%;
  padding: 30rpx;
}

#panel text{
  height: 9vh;
  line-height: 9vh;
  border: 1rpx solid #ddd;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;

}
.flex-cell{
  flex: 1;
}

.add-btn {
  margin: 30rpx;
  width: 250rpx;
  height: 100rpx;
}
.red {
  color: #1296db;
  text-decoration: underline;
  /* background: red;
  width: 60rpx;
  height: 30rpx; */
}

.list {
  text-align: center;
  font-size: 60rpx;
  color: #8a8a8a;
}
/* 点击添加 */
/*button*/  
.btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
}  
  
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
}  
  
.drawer_title{  
  padding:15px;  
  font-size: 20px;  
  text-align: center;  
}  
.drawer_content {  
  height: 210px;  
  overflow-y: scroll;
}  
  
.btn_ok{  
  padding: 10px;  
  font-size: 20px;  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #1296db;  
}  
  
.top{  
  padding-top:8px;  
}  
.bottom {  
    padding-bottom:8px;  
}  
.title {  
  height: 30px;  
  line-height: 30px;  
  width: 160rpx;  
  text-align: center;  
  display: inline-block;  
  font-size: 300 28rpx/30px;  
}  
.input_base {  
  border: 2rpx solid #ccc;  
  padding-left: 10rpx;  
  margin-right: 50rpx;  
}  
.input_h30{  
  height: 30px;  
  line-height: 30px;  
}  
.input_h60{  
  height: 60px;  
}  
.input_view{  
  font-size: 12px;  
  background: #fff;  
  color:#000;  
  line-height: 30px;  
}  
  
input {  
  font-size: 12px;  
