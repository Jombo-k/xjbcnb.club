<!--pages/rice/rice.wxml-->
<view class="list">夜间尬酒列表</view>
<!-- 点击按钮显示添加表单 -->
<view class="add-box">
  <button
    class="add-btn"
    bindtap="powerDrawer"
    data-statu="open"
    type="default"
    size="default"
    loading="{{loading}}"
    plain="{{plain}}"
    disabled="{{disabled}}"
    hover-class="other-button-hover"
  >添加</button>  
</view>
<!--mask-->  
<view 
  class="drawer_screen"
  bindtap="powerDrawer"
  data-statu="close"
  wx:if="{{showModalStatus}}"
></view>  
<!--content-->  
<!--使用animation属性指定需要执行的动画-->  
<view
  animation="{{animationData}}"
  class="drawer_box"
  wx:if="{{showModalStatus}}"
>  
  <!--drawer content-->  
  <view class="drawer_title">添加</view>  
  <view class="drawer_content">  
    <view class="top grid">  
      <label class="title col-0">姓名</label>  
      <input class="input_base input_h30 col-1" name="rName" value="刘继宽"></input>  
    </view>  
    <view class="top grid">  
      <label class="title col-0">地点</label>  
      <input class="input_base input_h30 col-1" name="mobile" value="不要南疆"></input>  
    </view>
    <view class="top grid">  
      <label class="title col-0">携带人数</label>  
      <input class="input_base input_h30 col-1" name="Email" value="0"></input>  
    </view>  
    <view class="top bottom grid">  
      <label class="title col-0">备注</label>  
      <input class="input_base input_h30 col-1" name="bz"></input>  
    </view>  
  </view>  
  <view 
    class="btn_ok"
    bindtap="powerDrawer"
    data-statu="close"
  >确定</view>  
</view>
