<!-- 列表 -->
<view id="panel">
  <view class="flex-cell flex-row">
    <text class="flex-cell flex-row">姓名</text>
    <text class="flex-cell flex-row">地点</text>
    <text class="flex-cell flex-row">携带人数</text>
    <text class="flex-cell flex-row">操作</text>
  </view>
  <view class="flex-row flex-cell">
    <text class="flex-cell flex-row">阿三</text>
    <text class="flex-cell flex-row">熊记</text>
    <text class="flex-cell flex-row">1</text>
    <text 
      class="flex-cell flex-row red"
      bindtap="showDeleteModal"
    >删除</text>
  </view>
</view>